<div class="col-sm-12">
  <div class="panel panel-white post panel-shadow">
    <div class="post-heading">
      <div class="pull-left image">
        <img src="http://bootdey.com/img/Content/user_1.jpg" class="img-circle avatar" alt="user profile image" size="60x60">
      </div>
      <div class="pull-left meta">
        <div class="title h5">
          <strong><%= commentary.user.name %></strong> said:
        </div>
      </div>
    </div>
    <div class="post-description">
      <p> <%= commentary.content %></p>
    </div>
    <% if commentary.user == current_user %>
      <div class="post-editor">
        <p><%= link_to "Delete", commentary_path(commentary), method: :delete %></p>
      </div>
    <% end %>
  </div>
</div>